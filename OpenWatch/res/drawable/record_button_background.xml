<?xml version="1.0" encoding="utf-8"?>
<!-- Thanks! http://android.onyou.ch/2011/01/25/simple-custom-button-using-a-selector-xml-layout/ -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item android:state_enabled="false"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#8f8080" android:startColor="#b4a2a2" />

            <corners android:radius="18dp" />
        </shape></item>
    
    <!-- pressed -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#861c1c" android:startColor="#b52828" />

            <corners android:radius="18dp" />
        </shape></item>

    <!-- focused -->
    <item android:state_focused="true"><shape>
            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />

            <gradient android:angle="270" android:endColor="#861c1c" android:startColor="#b52828" />

            <corners android:radius="18dp" />
        </shape></item>

    <!-- default -->
    <item><shape>
            <gradient android:angle="270" android:endColor="#D13838" android:startColor="#ff4545" />

            <stroke android:width="1px" android:color="#444" />

            <corners android:radius="18dp" />
        </shape></item>

</selector>